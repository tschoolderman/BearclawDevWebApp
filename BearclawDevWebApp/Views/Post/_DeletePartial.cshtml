@model Portfolio.Models.Post


<div id="deletePostModal-@Model.Id" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title">Delete Post</h5>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <br />
                    Are you sure you want to delete post #@Html.DisplayFor(model => model.Id)?<br />
                    <br />
                </div>
                <div class="form-group modal-footer">
                    <div>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                    <div>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deletePostModal-'+@Model.Id).modal('show');
        });
    </script>
}