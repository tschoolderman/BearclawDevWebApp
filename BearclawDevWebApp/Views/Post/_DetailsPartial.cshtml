@model Portfolio.Models.Post


<div id="detailsPostModal-@Model.Id" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title">Post Details</h5>
            </div>
            <div class="modal-body" id="detailsPostModalBody">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                </dl>
                <div class="form-group modal-footer">
                    <div>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#detailsPostModal').modal('show');
        });
    </script>
}